            "name": "Philip Chase",
            "email": "pbc@ufl.edu",
            "institution": "University of Florida - CTSI"
        },
        {
            "name": "Taryn Stoffs",
            "email": "tls@ufl.edu",
            "institution": "University of Florida - CTSI"
        },
        {
            "name": "Prasad Lanka",
            "email": "planka@ufl.edu",
            "institution": "University of Florida - CTSI"
        },
        {
            "name": "Surya Prasanna",
            "email": "suryayalla@ufl.edu",
            "institution": "University of Florida - CTSI"
        },
        {
            "name": "Dileep Rajput",
            "email": "rajputd@ufl.edu",
            "institution": "University of Florida - CTSI"
        },
        {
            "name": "Stewart Wehmeyer",
            "email": "swehmeyer@ufl.edu",
            "institution": "University of Florida - CTSI"
        },
        {
            "name": "Tiago Bember",
            "email": "tbembersimeao@ufl.edu",
            "institution": "University of Florida - CTSI"
        }
    ],
    "project-settings": [
        {
            "key": "control_fields",
            "name": "Control fields",
            "type": "sub_settings",
            "repeatable": true,
            "sub_settings": [
                {
                    "key": "control_event_id",
                    "name": "Event",
                    "type": "event-list"
                },
                {
                    "key": "control_field_key",
                    "name": "Field",
                    "type": "field-list"
                },
                {
                    "key": "control_default_value",
                    "name": "Default value when control field is not set yet",
                    "type": "text"
                }
            ]
        },
        {
            "key": "target_forms",
            "name": "Forms to apply branching logic",
            "type": "sub_settings",
            "repeatable": "true",
            "sub_settings": [
                {
                    "key": "target_form",
                    "name": "Form",
                    "type": "form-list"
                },
                {
                    "key": "target_event_select",
                    "name": "Apply this rule only on specific events",
                    "type": "checkbox"
                },
                {
                    "key": "target_event_ids",
                    "name": "Events to apply this rule",
                    "type": "event-list",
                    "repeatable": true,
                    "branchingLogic": {
                        "field": "target_event_select",
                        "value": true
                    }
                },
                {
                    "key": "conditions",
                    "name": "Conditions",
                    "type": "sub_settings",
                    "repeatable": "true",
                    "sub_settings": [
                        {
                            "key": "condition_key",
                            "name": "Control field",
                            "type": "dropdown",
                            "choices": [
                                {
                                    "value": "",
                                    "name": "-- Select --"
                                }
                            ]
                        },
                        {
                            "key": "condition_operator",
                            "name": "Operator",
                            "type": "dropdown",
                            "choices": [
                                {
                                    "value": "",
                                    "name": "="
                                },
                                {
                                    "value": ">",
                                    "name": ">"
                                },
                                {
                                    "value": ">=",
                                    "name": ">="
                                },
                                {
                                    "value": "<",
                                    "name": "<"
                                },
                                {
                                    "value": "<=",
                                    "name": "<="
                                },
                                {
                                    "value": "<>",
                                    "name": "<>"
                                }
                            ]
                        },
                        {
                            "key": "condition_value",
                            "name": "Control value",
                            "type": "text"
                        }
                    ]
                }
            ]
        }
    ],
    "compatibility": {
        "redcap-version-min": "8.4.3"
    }
}
